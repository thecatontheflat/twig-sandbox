<h1>Loops</h1>

<table border="1">
{% for letter in 'a'..'z' if letter != 'b' %}
    {% if loop.first %}
        <tr>
            <th>loop.index0</th>
            <th>loop.index</th>
            <th>letter</th>
        </tr>
    {% endif %}

    <tr bgcolor="{{ cycle(['cyan', 'gray', 'lightgreen'], loop.index) }}">
        <td>{{ loop.index0 }}</td>
        <td>{{ loop.index }}</td>
        <td>{{ letter }} {{ loop.index is odd ? ' - odd' }}</td>
    </tr>
{% endfor %}
</table>

<h1>Batch</h1>
<table border="1">
    {% set array = range('a', 'z') %}
    {% for row in array|batch(3, '-') %}
        <tr>
            {% for letter in row %}
                <td>{{ letter }}</td>
            {% endfor %}
        </tr>
    {% endfor %}
</table>
